<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <h2>S'inscrire</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/devise_errors" %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"email" %>
        </div>
        <div class="form-group">
          <%= f.text_field :speudo, autofocus: true, autocomplete: "off", class: "form-control", placeholder:"pseudo" %>
        </div>
        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"mot de passe" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control", placeholder:"comfirmation mot de passe" %>
        </div>

        <div class="actions">
          <%= f.submit "S'inscrire" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
</div>
